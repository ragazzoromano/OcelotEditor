<Window x:Class="OcelotEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OcelotEditor.Views"
        mc:Ignorable="d"
        Title="Ocelot Editor"
        Height="800"
        Width="1100">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Command="{Binding OpenCommand}" />
                <MenuItem Header="Save" Command="{Binding SaveCommand}" />
                <MenuItem Header="Save As..." Command="{Binding SaveAsCommand}" />
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button Content="Open..." Command="{Binding OpenCommand}" Margin="0,0,8,0" MinWidth="80"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,0,8,0" MinWidth="80" />
            <Button Content="Save As..." Command="{Binding SaveAsCommand}" Margin="0,0,8,0" MinWidth="80"/>
            <Separator Width="16" Margin="0,0,8,0"/>
            <Button Content="Add Route" Command="{Binding AddRouteCommand}" Margin="0,0,8,0" MinWidth="80"/>
            <Button Content="Duplicate Route" Command="{Binding DuplicateRouteCommand}" Margin="0,0,8,0" MinWidth="80"/>
            <Button Content="Delete Route" Command="{Binding DeleteRouteCommand}" Margin="0,0,8,0" MinWidth="80"/>
            <Button Content="Move Up" Command="{Binding MoveRouteUpCommand}" Margin="0,0,8,0" MinWidth="80"/>
            <Button Content="Move Down" Command="{Binding MoveRouteDownCommand}" MinWidth="80"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Margin="8" DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Routes}"
                      SelectedItem="{Binding SelectedRoute, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="0,0,8,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Upstream" Binding="{Binding UpstreamPathTemplate}" Width="*" />
                        <DataGridTextColumn Header="Downstream" Binding="{Binding DownstreamPathTemplate}" Width="*" />
                        <DataGridTextColumn Header="Host" Binding="{Binding PrimaryHostSummary}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Column="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <GroupBox Header="Route Details" Margin="0,0,0,8">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Upstream Path Template" />
                                    <TextBox Text="{Binding SelectedRoute.UpstreamPathTemplate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Margin="0,0,0,8" />

                                    <TextBlock Text="HTTP Methods" />
                                    <ItemsControl ItemsSource="{Binding SelectedRoute.HttpMethodOptions}" Margin="0,0,0,8">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Name}"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <TextBlock Text="Downstream Path Template" />
                                    <TextBox Text="{Binding SelectedRoute.DownstreamPathTemplate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Margin="0,0,0,8" />

                                    <TextBlock Text="Downstream Scheme" />
                                    <ComboBox SelectedValue="{Binding SelectedRoute.DownstreamScheme, Mode=TwoWay}"
                                          SelectedValuePath="Content"
                                          Margin="0,0,0,8">
                                        <ComboBoxItem Content="http" />
                                        <ComboBoxItem Content="https" />
                                    </ComboBox>

                                    <GroupBox Header="Downstream Hosts" Margin="0,0,0,8">
                                        <DockPanel>
                                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                                                <Button Content="Add Host" Command="{Binding SelectedRoute.AddHostCommand}" Margin="0,0,8,0" MinWidth="80"/>
                                                <Button Content="Remove Selected" Command="{Binding SelectedRoute.RemoveSelectedHostCommand}" MinWidth="80"/>
                                            </StackPanel>
                                            <DataGrid ItemsSource="{Binding SelectedRoute.HostsView}"
                                                  SelectedItem="{Binding SelectedRoute.SelectedHost, Mode=TwoWay}"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  IsReadOnly="False">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Host"
                                                                   SortMemberPath="Host"
                                                                   Binding="{Binding Host, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="*">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding}" FontWeight="SemiBold" />
                                                                    <TextBox Margin="0,4,0,0"
                                                                         Width="Auto"
                                                                         ToolTip="Filter hosts"
                                                                         Text="{Binding DataContext.SelectedRoute.HostFilterText, RelativeSource={RelativeSource AncestorType=DataGrid}, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>
                                                    <DataGridTextColumn Header="Port"
                                                                   SortMemberPath="Port"
                                                                   Binding="{Binding Port, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="*">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding}" FontWeight="SemiBold" />
                                                                    <TextBox Margin="0,4,0,0"
                                                                         Width="Auto"
                                                                         ToolTip="Filter ports"
                                                                         Text="{Binding DataContext.SelectedRoute.PortFilterText, RelativeSource={RelativeSource AncestorType=DataGrid}, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </DockPanel>
                                    </GroupBox>

                                    <CheckBox Content="Route Is Case Sensitive"
                                          IsChecked="{Binding SelectedRoute.RouteIsCaseSensitive, Mode=TwoWay}"
                                          Margin="0,0,0,8" />

                                    <GroupBox Header="Authentication" Margin="0,0,0,8">
                                        <StackPanel Margin="8">
                                            <TextBlock Text="Provider Key" />
                                            <TextBox Text="{Binding SelectedRoute.AuthenticationOptions.AuthenticationProviderKey, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="0,0,0,8" />

                                            <TextBlock Text="Allowed Scopes" />
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBox Width="200"
                                                     Text="{Binding SelectedRoute.AuthenticationOptions.NewScope, UpdateSourceTrigger=PropertyChanged}" />
                                                <Button Content="Add" Command="{Binding SelectedRoute.AuthenticationOptions.AddScopeCommand}" Margin="8,0,0,0" MinWidth="80"/>
                                            </StackPanel>
                                            <ListBox ItemsSource="{Binding SelectedRoute.AuthenticationOptions.AllowedScopes}"
                                                 SelectedItem="{Binding SelectedRoute.AuthenticationOptions.SelectedScope, Mode=TwoWay}" />
                                            <Button Content="Remove Selected" Command="{Binding SelectedRoute.AuthenticationOptions.RemoveScopeCommand}" Margin="0,8,0,0" />
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Global Configuration">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Base URL" />
                                    <TextBox Text="{Binding GlobalConfiguration.BaseUrl, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <StatusBar Grid.Row="1" DockPanel.Dock="Bottom" Margin="0,4,0,0" MaxHeight="50">
                <StatusBarItem Content="{Binding CurrentFilePath}" Width="Auto" />
                <StatusBarItem Content="{Binding StatusMessage}" />
                <StatusBarItem>
                    <TextBlock Text="{Binding HasUnsavedChanges, StringFormat='Unsaved: {0}'}" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>
